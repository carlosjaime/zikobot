<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="trackVM"
            type="com.startogamu.zikobot.home.track.TrackVM" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_disk"
            android:layout_width="@dimen/trackItemPlayerLarge"
            android:layout_height="@dimen/trackItemPlayerLarge"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_vinyl" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:imageUrl="@{trackVM.image}" />

    </RelativeLayout>
</layout>