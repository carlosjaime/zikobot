<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="me.tatarka.bindingcollectionadapter.LayoutManagers" />

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="fragmentAlarmsVM"
            type="com.startogamu.zikobot.alarm.FragmentAlarmsVM" />
    </data>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:bindingContext=".core.MainActivity">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/alarm_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:adapter='@{"com.startogamu.zikobot.view.adapter.AlarmAdapter"}'
            app:itemView="@{fragmentAlarmsVM.itemView}"
            app:items="@{fragmentAlarmsVM.itemsVM}"
            app:layoutManager="@{LayoutManagers.grid(1)}"
            android:paddingBottom="@dimen/margin_player"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/item_alarm" />


        <com.startogamu.zikobot.view.custom.ZikobotMessageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{fragmentAlarmsVM.showTuto ? v.VISIBLE :  v.GONE}"
            app:zmv_message="@string/tuto" />


    </RelativeLayout>
</layout>



















