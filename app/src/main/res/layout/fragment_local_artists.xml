<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="fragmentLocalArtistsVM"
            type="com.joxad.zikobot.app.artist.FragmentLocalArtistsVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.joxad.zikobot.app.core.viewutils.AnimatedGridRecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:layoutAnimation="@anim/grid_animation"
            android:paddingBottom="@dimen/view_player_height"
            app:itemView="@{fragmentLocalArtistsVM.itemView}"
            app:items="@{fragmentLocalArtistsVM.items}"
            tools:listitem="@layout/item_artist" />

        <com.joxad.zikobot.app.core.viewutils.ZikobotMessageView
            android:id="@+id/zmv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{fragmentLocalArtistsVM.showZmvMessage ? v.VISIBLE : v.GONE}" />

    </RelativeLayout>
</layout>
