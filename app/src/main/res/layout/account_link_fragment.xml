<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="accountLinkFragmentVM"
            type="com.startogamu.zikobot.ftu.AccountLinkFragmentVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        android:orientation="vertical">

        <include
            layout="@layout/bottom_sheet_fragment_header"
            app:title="@{@string/account_link_ftu_title}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/account_spotify_subtitle"
                    android:textColor="@color/colorSpotify" />

                <include
                    android:id="@+id/cv_spotify"
                    layout="@layout/view_button_account"
                    app:accountVM="@{accountLinkFragmentVM.spotifyAAccountVM}" />


                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Plutôt SoundCloud ? Je le gère aussi ! "
                    android:textColor="@color/colorSoundCloud" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</layout>
